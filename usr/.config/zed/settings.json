// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent_buffer_font_size": 11.0,
  "helix_mode": true,
  "vim_mode": false,
  "relative_line_numbers": true,
  "vim": {
    // "default_mode":"insert"
    // "toggle_relative_line_numbers": true
  },
  "agent_ui_font_size": 11,
  "agent": {
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "play_sound_when_agent_done": true,
    "model_parameters": [],
    "default_profile": "ask",
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    },
    "dock": "right"
  },
  "icon_theme": "Catppuccin Macchiato",
  "theme": "Catppuccin Macchiato",
  "indent_guides": {
    "coloring": "indent_aware",
    "active_line_width": 2
  },
  "project_panel": {
    "dock": "left",
    "indent_size": 10
  },
  "outline_panel": {
    "dock": "left"
  },
  "git_panel": {
    "dock": "right"
  },
  "auto_install_extensions": {
    "html": true
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 600
    }
  },
  "restore_on_startup": "last_workspace",
  "autoscroll_on_clicks": true,
  "auto_update": true,
  "base_keymap": "VSCode",
  "buffer_font_family": "0xProto Nerd Font Mono",
  "buffer_font_fallbacks": ["Cica"],
  "buffer_font_features": {
    "calt": false
  },
  "buffer_font_size": 11.0,
  "buffer_font_weight": 400,
  "ui_font_family": "0xProto Nerd Font Mono",
  "ui_font_size": 11,

  "terminal": {
    "font_family": "0xProto Nerd Font Mono",
    "cursor_shape": "bar",
    "blinking": "on"
  },

  "edit_predictions": {
    "mode": "eager",
    "disabled_globs": [".env"]
  },

  "tabs": {
    "close_position": "left",
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "history",
    "show_close_button": "hover"
  },
  "format_on_save": "on",
  "show_whitespaces": "all",
  "show_edit_predictions": false,
  "features": {
    "edit_prediction_provider": "zed"
  },
  "languages": {
    "Rust": {
      "show_edit_predictions": false
    },
    "HTML": {
      "language_servers": ["vscode-html-language-server", "superhtml"],
      "formatter": { "language_server": { "name": "superhtml" } },
      "tab_size": 2
    },
    "C": {
      "format_on_save": "on",
      "tab_size": 4
    },
    "C++": {
      "format_on_save": "on",
      "tab_size": 4
    },
    "Markdown": {
      "tab_size": 4
    }
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "wrap_guides": [100],
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        }
      }
    }
  },
  "language_models": {
    "ollama": {
      "api_url": "http://localhost:11434",
      "available_models": [
        // {
        //   "name": "gemma3:12b",
        //   "max_tokens": 32768,
        //   "display_name": "gemma3 12b"
        //   // "supports_tools": true
        // },
        {
          "name": "gemma3:4b",
          "max_tokens": 32768,
          "display_name": "gemma3 4b"
          // "supports_tools": true
        }
      ]
    }
  },
  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "lsp_pull_diagnostics": {
      "enabled": true,
      "debounce_ms": 50
    },
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": "hint"
    }
  }
}
